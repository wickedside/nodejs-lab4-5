{
  "root": true,
  "env": {
    "es2020": true,
    "jasmine": true,
    "jest": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": [
    "@typescript-eslint" // добавляем плагин TypeScript
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended", // добавляем рекомендации TypeScript
    "plugin:node/recommended",
    "airbnb-base",
    "prettier"
  ],
  "rules": {
    "import/extensions": [
      "error",
      "ignorePackages", 
      {
        "js": "never",
        "ts": "never" // указываем, что для файлов .ts расширения не нужны
      }
    ],
    "linebreak-style": "off",
    "no-underscore-dangle": "off",
    "import/prefer-default-export": "off",
    "node/no-unsupported-features/es-syntax": "off",
    "@typescript-eslint/no-explicit-any": "warn", // предупреждение для использования 'any'
    "@typescript-eslint/explicit-module-boundary-types": "warn" // требование явного объявления возвращаемых типов функций
  },
  "settings": {
    "node": {
      "tryExtensions": [".ts", ".js", ".json", ".node"] // попытки расширений для импорта модулей
    }
  }
}